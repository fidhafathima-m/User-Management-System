<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
        }
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 250px;
            background-color: #343a40;
            padding-top: 50px;
        }
        .sidebar a {
            color: #fff;
            text-decoration: none;
            padding: 15px;
            display: block;
            transition: background-color 0.3s ease;
        }
        .sidebar a:hover {
            background-color: #0072ff;
        }
        .sidebar a.active {
            background-color: #0072ff;
        }
        .content {
            margin-left: 250px;
            padding: 20px;
        }
        .content h1 {
            color: #0072ff;
        }
        footer {
            position: relative;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: #343a40;
            color: #fff;
            text-align: center;
            padding: 20px;
            margin-top: 20px;
        }
        .form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .form-container h3 {
            text-align: center;
            margin-bottom: 30px;
            color: #0072ff;
        }
        .form-group img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 50%;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h3 class="text-white text-center mb-4">Admin Panel</h3>
        <a href="/admin/home">Dashboard</a>
        <a href="/admin/usersManage" class="active">Manage Users</a>
        <a href="/admin/profile">Your Profile</a>
        <a href="#">Analytics</a>
        <a href="/admin/logout">Logout</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <div class="form-container">
            <h3>Edit User</h3>
            <form action="/admin/edit-user" method="POST" onsubmit="console.log('Form Data:', new FormData(this));">
                <input type="hidden" name="user_id" value="<%= user._id %>">
                <!-- Name Input -->
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" id="name" name="name" class="form-control" value="<%= user.name %>" required>
                </div>
                
                <!-- Email Input -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-control" value="<%= user.email %>" required>
                </div>

                <!-- Phone Input -->
                <div class="mb-3">
                    <label for="phone" class="form-label">Phone</label>
                    <input type="tel" id="phone" name="phone" class="form-control" value="<%= user.phone %>" required>
                </div>

                <!-- Verified Status -->
                <div class="mb-3">
                    <label for="verified" class="form-label">Verified Status</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="verifiedYes" name="is_verified" value="true" <%= user.is_verified === 1 ? 'checked' : '' %> >
                        <label class="form-check-label" for="verifiedYes">Verified</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="verifiedNo" name="is_verified" value="false" <%= user.is_verified === 0 ? 'checked' : '' %> >
                        <label class="form-check-label" for="verifiedNo">Not Verified</label>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="d-flex justify-content-between">
                    <a href="/admin/usersManage" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary ">Save Changes</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 Admin Dashboard | All Rights Reserved</p>
    </footer>

    <!-- Bootstrap 5 JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
